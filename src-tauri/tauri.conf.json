{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "brisk",
  "version": "0.1.0",
  "identifier": "com.dipxsy.brisk",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "brisk",
        "label": "main",
        "width": 1600,
        "height": 1200,
        "minWidth": 900,
        "minHeight": 600,
        "maxWidth": 1600,
        "maxHeight": 1200,
        "decorations": false,
        "transparent": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "appimage",
    "icon": ["icons/brisk.png"]
  }
}
